.box {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  border-top: gray solid 1rpx;
  background-color: white;
}

.adress_box {
  border: gray solid 1rpx;
  display: block;
  margin-bottom: 10rpx;
  background-color: white;
}

.adressImage {
  display: inline-flex;
  position: absolute;
  left: 219rpx;
  top: 50rpx;
  transform: translateY(-50%);
  height: 45rpx;
  width: 30rpx;
}

#add_adress_text {
  display: inline-block;
  position: absolute;
  top: 50rpx;
  left: 256rpx;
  transform: translateY(-51%);
  color: black;
  font-family: CustomFont;
}

.add_adress {
  display: block;
  height: 100rpx;
  background: white;
}

.adressList {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modify {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 20%;
  height: 10rpx;
  padding: 0rpx;
  position: relative;
  top: -45rpx;
  right: -610rpx;
}

.modify image {
  width: 100%;
  height: 100%;
}


.sec_adress_box {
  width: 80%;
  display: flex;
  flex-direction: column;
  font-size: 35rpx;
}

.goodList {
  display: flex;
  flex-direction: column;
  border: gray solid 0.1rpx;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 6rpx;
  margin-right: 6rpx;
  border-radius: 25rpx;
background-color: white;
}

.buttonContainers {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  position: relative;
}

.button-containerAdd {
  position: relative;

}

.button-containerReduce {
  position: relative;
  left: 280rpx;
}
.Total{
  display: grid;
  grid-template-rows: auto auto auto;
  grid-gap: 30px; 
}